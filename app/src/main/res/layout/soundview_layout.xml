<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/btn_ctrl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"

    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_start"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_mic_start" />


    <ImageView
        android:id="@+id/img_circle3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/cicle3" />


    <ImageView
        android:id="@+id/img_circle2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/cicle2" />


    <ImageView
        android:id="@+id/img_circle1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/cicle1" />

    <ImageView
        android:id="@+id/img_stop"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/ic_mic_close" />

</RelativeLayout>